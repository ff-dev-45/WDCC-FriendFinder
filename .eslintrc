{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "arrow-spacing": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "max-len": ["warn", {
      "code": 120
    }],
    "object-curly-newline": ["error", {
      "consistent": true
    }],
    "quotes": ["error", "single"],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "semi": ["error", "never"]
  },
  "plugins": [
    "react"
  ]
}
